{% comment %}ly_global_begin{% endcomment %}{% capture ly-global-content %}{% render 'ly-global' render:true %}{% endcapture %}{% assign ly-global-content = ly-global-content | split: '#ly#' %}{% assign langify_title = ly-global-content[0] %}{% assign langify_description = ly-global-content[1] %}{% assign langify_shop_name = ly-global-content[2] %}{% assign langify_shop_description = ly-global-content[3] %}{% assign canonical_langify_url = ly-global-content[4] %}{% assign langify_shop_url = ly-global-content[5] %}{% assign langify_shop_domain = ly-global-content[6] %}{% comment %}ly_global_end{% endcomment %}{% comment %}Used for home page sections only when featured collections is chosen but no content has been selected{% endcomment %}

<article id="collection-loop" class="row">

  {% if section.settings.title != blank %}
    <div class="section-title row">
      <h2>{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}

  {% for i in (1..3) %}
    {% capture current %}{{ forloop.index }}{% endcapture %}
    {%- assign placeholder = 'collection-' | append: current -%}

    <div class="desktop-4 tablet-2 mobile-half" data-alpha="{% comment %}ly_code_replace_for_[ collection.title ]_begin{% endcomment %}{% capture ly_translation %}{% render 'ly-title' with collection render:true %}{% endcapture %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}" {{ block.shopify_attributes }}>
      {%- assign image_size = '500x' -%}
      <div class="collection-image ci onboard">
        <a href="{{ collection.url }}" title="{{ collection_title }}">
          {{ placeholder | placeholder_svg_tag }}
        </a>
      </div>
      <div class="product-details">
        <h3>
          <a href="#">Sample collection {{ forloop.index }}</a>
        </h3>
      </div>
    </div>
  {% endfor %}
</article>
