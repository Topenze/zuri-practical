{% comment %}ly_global_begin{% endcomment %}{% capture ly-global-content %}{% render 'ly-global' render:true %}{% endcapture %}{% assign ly-global-content = ly-global-content | split: '#ly#' %}{% assign langify_title = ly-global-content[0] %}{% assign langify_description = ly-global-content[1] %}{% assign langify_shop_name = ly-global-content[2] %}{% assign langify_shop_description = ly-global-content[3] %}{% assign canonical_langify_url = ly-global-content[4] %}{% assign langify_shop_url = ly-global-content[5] %}{% assign langify_shop_domain = ly-global-content[6] %}{% comment %}ly_global_end{% endcomment %}
<div 
	id="looxReviews" 
	data-loox-aggregate 
	data-limit="{{section.settings.data-limit}}" 
	{% if section.settings.only_photos %}data-mode="img"{% endif %} 
	{% if section.settings.product_handle %}data-product-id="{{ all_products[section.settings.product_handle].id }}"{% endif %}
	{% if section.settings.hide_thumbnails %}data-product-thumbnails="false"{% endif %}
	style="margin:0 auto;max-width:{{section.settings.maxwidth}}px;"
></div>
{% schema %}
{
	"name": "All reviews - Grid",
	"class": "index-section",
	"settings": [
		{
			"id": "only_photos",
			"type": "checkbox",
			"label": "Display only reviews with photos",
			"default": false
		},
		{
			"id": "hide_thumbnails",
			"type": "checkbox",
			"label": "Hide product thumbnails",
			"default": false
		},
		{
			"type": "product",
			"id": "product_handle",
			"label": "Add \"Write a review\" button linked to:"
		},
		{
			"type": "range",
			"id": "data-limit",
			"min": 1,
			"max": 40,
			"step": 1,
			"label": "Number of reviews to display",
			"default": 20
		},
		{
			"type": "range",
			"id": "maxwidth",
			"min": 480,
			"max": 1920,
			"step": 40,
			"unit": "px",
			"label": "Maximum width",
			"default": 1080
		}
	],
	"presets": [{
		"name": "All reviews - Grid",
		"category": "Loox"
	}]
}
{% endschema %}